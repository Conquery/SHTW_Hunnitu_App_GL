<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <!-- 顶部图形标题，数据所属组织机构 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/groupsharp">

        <!-- 右边组织机构名称 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/arraw" />

            <TextView
                android:id="@+id/bhz_zuzhiName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="@string/comm_zuzhi"
                android:textColor="@color/blueText"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 右边显示拌合站数量 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/bhz_count"
                android:background="@drawable/design_blue_point"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:gravity="center"
                android:textSize="15dp"
                android:text="7"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="@string/comm_ge_bhz"
                android:textColor="@color/blueText"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/bhj_count"
                android:background="@drawable/design_blue_point"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:gravity="center"
                android:textSize="15dp"
                android:text="7"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="@string/comm_tai_bhj"
                android:textColor="@color/blueText"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>


    </RelativeLayout>

    <!-- 表头部分：监理1标，总盘数，报警等级 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:text="@string/comm_zongpanshu"
                        android:textStyle="bold"
                        android:textColor="@color/blueText" />

                    <TextView
                        android:id="@+id/sysdh_item_zongpanshu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:text="@string/comm_zongfangliang"
                        android:textStyle="bold"
                        android:textColor="@color/blueText" />

                    <TextView
                        android:id="@+id/sysdh_item_zongfangliang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textSize="15dp"
                android:text="@string/comm_baojingdengji"
                android:textColor="@color/blueText" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/comm_chaobiaopanshu"
                android:textSize="15dp"
                android:textColor="@color/blueText" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/comm_chaobiaolv"
                android:textSize="15dp"
                android:textColor="@color/blueText" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/comm_chuzhipanshu"
                android:textSize="15dp"
                android:textColor="@color/blueText" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/comm_chuzhilv"
                android:textSize="15dp"
                android:textColor="@color/blueText" />
        </LinearLayout>
    </LinearLayout>

    <!-- 分割线 -->
    <TextView
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/back"/>

    <!-- 初级 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/comm_chuji"
            android:textStyle="bold"
            android:textColor="@color/green" />

        <TextView
            android:id="@+id/sysdh_item_chuji_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/comm_number0"
            android:textColor="@color/green" />

        <TextView
            android:id="@+id/sysdh_item_chuji_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/comm_number0"
            android:textColor="@color/green" />

        <TextView
            android:id="@+id/sysdh_item_chuji_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/comm_number0"
            android:textColor="@color/green" />

        <TextView
            android:id="@+id/sysdh_item_chuji_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/comm_number0"
            android:textColor="@color/green" />
    </LinearLayout>

    <!-- 中级 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/comm_zhongji"
            android:textStyle="bold"
            android:textColor="@color/orange" />

        <TextView
            android:id="@+id/sysdh_item_zhongji_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/comm_number0"
            android:textColor="@color/orange" />

        <TextView
            android:id="@+id/sysdh_item_zhongji_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/comm_number0"
            android:textColor="@color/orange" />

        <TextView
            android:id="@+id/sysdh_item_zhongji_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/comm_number0"
            android:textColor="@color/orange" />

        <TextView
            android:id="@+id/sysdh_item_zhongji_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/comm_number0"
            android:textColor="@color/orange" />
    </LinearLayout>

    <!-- 中级 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/comm_gaoji"
            android:textStyle="bold"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/sysdh_item_gaoji_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/comm_number0"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/sysdh_item_gaoji_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/comm_number0"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/sysdh_item_gaoji_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/comm_number0"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/sysdh_item_gaoji_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/comm_number0"
            android:textColor="@color/red" />
    </LinearLayout>

</LinearLayout>