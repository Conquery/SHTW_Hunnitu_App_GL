<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:background="@drawable/groupsharp1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.9" 
        android:paddingLeft="5dp"
        android:orientation="vertical">

        <!-- 第1行 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/syTypeTitle"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blueText"
                android:text="@string/comm_shiyanleixing_maohao"/>

            <TextView
                android:id="@+id/syTypeContent"
                android:layout_toRightOf="@id/syTypeTitle"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black2"
                android:text="WT-XXXXX-000000"/>

            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:id="@+id/bhgsycz_chuzhi"
                android:layout_width="wrap_content"
                android:gravity="center|right"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="立即处置"/>
        </RelativeLayout>

        <!-- 第二行 -->
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/blueText"
                android:text="@string/hntqd_item_shijianNum" />

            <TextView
                android:id="@+id/bhgsy_shijianNum"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black2"
                android:text="2015-09-21" />
        </LinearLayout>

        <!-- 第二行 -->
		<LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/blueText"
                android:text="@string/bhgsy_syriqi" />

            <TextView
                android:id="@+id/bhgsy_syriqi"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black2"
                android:text="2015-09-21" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/blueText"
                android:text="@string/hntqd_item_name" />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/bhgsy_shebeimingcheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black2"
                android:text="1标试验室1-1号机"/>
        </LinearLayout>

        <!-- 第四行 -->
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/blueText"
                android:text="@string/hntqd_item_projectName" />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/bhgsycz_item_projectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black2"
                android:text="桥墩" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/blueText"
                android:text="@string/hntqd_item_partName" />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/bhgsycz_item_partName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black2"
                android:singleLine="true"
                android:text=""/>
        </LinearLayout>

    </LinearLayout>

    <ImageView 
        android:layout_height="40dp"
        android:layout_width="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.1"
        android:src="@drawable/arraw"/>

</LinearLayout>
