<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shapegrey"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/buttonBgBlue">

        <TextView
            android:id="@+id/project_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="5dp"
            android:paddingBottom="10dp"
            android:text="@string/hntqd_title"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/weather_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_launcher" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/menusharp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="@string/bhz_menu_baojingzaiyao"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/deepSkyBlue"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/main_tv_daichuzhi"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/blueText"
                        android:textSize="35dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/main_tv_leijichuzhi"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/blueText"
                        android:textSize="35dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/main_tv_chuzhilv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/blueText"
                        android:textSize="35dp"
                        android:textStyle="bold" />
                </TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="3dp"
                    android:background="@color/deepSkyBlue" />
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:gravity="center">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/sys_menu_daichuzhibaojin"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/sys_menu_leijichuzhi"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/sys_menu_chuzhilv"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                </TableRow>
            </TableLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/groupsharp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="@string/sys_menu_scguanli"
                    android:textColor="@color/blueText"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/wrap" />

            </RelativeLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <!-- 混泥土强度 -->
                    <LinearLayout
                        android:id="@+id/bhz_scsjchaxun"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/layerbggreen"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/Title2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="3dp"
                                android:layout_weight="0.7"
                                android:text="@string/sys_menu_shengchenshujuchaxun" />

                            <TextView
                                android:id="@+id/menuscchaxunNoAuth"
                                style="@style/Title2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_weight="0.3"
                                android:text="" />
                        </LinearLayout>

                        <TextView
                            style="@style/Title4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/comm_today" />

                        <!-- 请求条数 -->

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center|center_horizontal|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtBhzScToday"
                                style="@style/TitleLargerX"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="bottom"
                                android:text="@string/comm_number0" />

                            <TextView
                                style="@style/Title4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@id/txtBhzScToday"
                                android:layout_toRightOf="@id/txtBhzScToday"
                                android:text="@string/unit_tiao" />
                        </RelativeLayout>
                    </LinearLayout>

                    <!-- 钢筋拉力 -->

                    <LinearLayout
                        android:id="@+id/bhz_daichuzhibaojing"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/layerbgblue"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/Title2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="3dp"
                                android:layout_weight="0.7"
                                android:text="@string/sys_menu_daichuzhibaojin" />

                            <TextView
                                android:id="@+id/bhz_daichuzhi_auth"
                                style="@style/Title2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_weight="0.3"
                                android:text="" />
                        </LinearLayout>

                        <TextView
                            style="@style/Title4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/comm_leiji" />

                        <!-- 请求条数 -->

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center|center_horizontal|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtBhzDoLeiji"
                                style="@style/TitleLargerX"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="bottom"
                                android:text="@string/comm_number0" />

                            <TextView
                                style="@style/Title4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@id/txtBhzDoLeiji"
                                android:layout_toRightOf="@id/txtBhzDoLeiji"
                                android:text="@string/unit_pan" />
                        </RelativeLayout>
                    </LinearLayout>
                </TableRow>

            </TableLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/groupsharp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="@string/sys_menu_tongjifengxibhz"
                    android:textColor="@color/blueText"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/stats" />

            </RelativeLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center|center_horizontal|center_vertical">

                    <!-- 综合统计分析 -->
                    <RelativeLayout
                        android:id="@+id/bhz_zonghetongji"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/layerbgblack2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/sys_tongji_auth"
                            style="@style/Title2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp" />

                        <ImageView
                            android:id="@+id/menu_tongjiimage"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/alert2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/menu_tongjiimage"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:text="@string/bhz_menu_zonghetongji"
                            android:textColor="@color/white" />
                    </RelativeLayout>

                    <!-- 不合格处理 -->
                    <RelativeLayout
                        android:id="@+id/bhz_cailiaoyongliang"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/layerbgred"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/sys_buhege_auth"
                            style="@style/Title2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp" />

                        <ImageView
                            android:id="@+id/menu_buhegechuli"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/hand" />

                        <TextView
                            android:id="@+id/menu_tv_lable1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/menu_buhegechuli"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:text="@string/sys_menu_cailiaoyongliang"
                            android:textColor="@color/white" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_below="@+id/menu_buhegechuli"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="3dp"
                            android:layout_toRightOf="@+id/menu_tv_lable1"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/alarm" />
                    </RelativeLayout>
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>